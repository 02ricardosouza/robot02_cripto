{
  "name": "robo-cripto",
  "description": "Rob√¥ de trading de criptomoedas",
  "type": "web",
  "port": 5000,
  "build": {
    "dockerfile": {
      "path": "Dockerfile",
      "target": "production"
    }
  },
  "env": [
    {
      "name": "FLASK_APP",
      "value": "run:app"
    },
    {
      "name": "FLASK_ENV",
      "value": "production"
    },
    {
      "name": "PORT",
      "value": "5000"
    },
    {
      "name": "PYTHONPATH",
      "value": "/app:/app/src"
    }
  ],
  "volumes": [
    {
      "name": "logs",
      "path": "/app/src/logs"
    },
    {
      "name": "db",
      "path": "/app/src/database.db"
    }
  ]
} 