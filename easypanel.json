{
  "builder": "dockerfile",
  "startCommand": "gunicorn --workers=2 --bind=0.0.0.0:$PORT --pythonpath /app:/app/src run:app",
  "portMapping": "5000:5000",
  "mountPath": [
    {
      "source": "logs",
      "target": "/app/src/logs"
    },
    {
      "source": "db",
      "target": "/app/src/database.db"
    }
  ],
  "env": [
    {
      "name": "FLASK_APP",
      "value": "run:app"
    },
    {
      "name": "FLASK_ENV",
      "value": "production"
    },
    {
      "name": "PORT",
      "value": "5000"
    },
    {
      "name": "PYTHONPATH",
      "value": "/app:/app/src"
    }
  ]
} 