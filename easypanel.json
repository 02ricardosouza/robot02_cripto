{
  "builder": "dockerfile",
  "startCommand": "gunicorn --workers=2 --bind=0.0.0.0:$PORT src.run_api:app",
  "portMapping": "5000:5000",
  "mountPath": [
    {
      "source": "logs",
      "target": "/app/src/logs"
    },
    {
      "source": "db",
      "target": "/app/src/database.db"
    }
  ],
  "env": [
    {
      "name": "FLASK_APP",
      "value": "src.run_api"
    },
    {
      "name": "FLASK_ENV",
      "value": "production"
    },
    {
      "name": "PORT",
      "value": "5000"
    }
  ]
} 